  <!--begin::Body-->
  <body class="login-page bg-body-secondary">
    <div class="login-box">
      <div class="card card-outline card-primary">
        <div class="card-header">
            <h1 class="mb-0 d-flex justify-content-center"><b>Kendime</b>Not</h1>
        </div>
        <div class="card-body login-card-body">
          <p class="login-box-msg">Üye Olarak Kendiniz Özel Verilerinizi Saklayabilirsiniz.</p>
          <form class="login-form" asp-action="Register" asp-controller="Auth"
                data-ajax="true" data-ajax-method="POST"
                data-ajax-success="OnFormSuccess" data-ajax-failure="ErrorForm" data-ajax-begin="BeginForm">
            <div class="input-group mb-1">
              <div class="form-floating">
                <input id="loginFullname" name="Fullname" type="text" class="form-control" value="" placeholder="Adınız Soyadınız" />
                <label for="loginFullname">Adınız Soyadınız</label>
              </div>
              <div class="input-group-text"><span class="bi bi-person"></span></div>
            </div>
            <div class="input-group mb-1">
              <div class="form-floating">
                <input id="loginUsername" name="Username" type="text" class="form-control" value="" placeholder="Kullanıcı Adınızı Giriniz"/>
                <label for="loginUsername">Kullanıcı Adı</label>
              </div>
              <div class="input-group-text"><span class="bi bi-person"></span></div>
            </div>
            <div class="input-group mb-1">
              <div class="form-floating">
                <input id="loginPassword" name="Password" type="password" class="form-control" placeholder="Parolanızı Giriniz"/>
                <label for="loginPassword">Parola</label>
              </div>
              <div class="input-group-text"><span class="bi bi-lock-fill"></span></div>
            </div>
            <div class="input-group mb-1">
              <div class="form-floating">
                <input id="loginRPassword" name="RPassword" type="password" class="form-control" placeholder="Parolanızı Tekrar Giriniz"/>
                <label for="loginRPassword">Parola Tekrarı</label>
              </div>
              <div class="input-group-text"><span class="bi bi-lock-fill"></span></div>
            </div>
            <div class="input-group mb-1">
              <div class="form-floating">
                <input id="loginEmail" name="Email" type="email" class="form-control" placeholder="E-Posta Adresi Giriniz"/>
                <label for="loginEmail">Email</label>
              </div>
              <div class="input-group-text"><span class="bi bi-envelope"></span></div>
            </div>
            <div class="input-group mb-1">
              <div class="form-floating">
                <input id="loginPhone" name="PhoneNumber" type="text" class="form-control" placeholder="Telefon Numarası Örn:5391233212"/>
                <label for="loginPhone">Telefon</label>
              </div>
              <div class="input-group-text"><span class="bi bi-phone"></span></div>
            </div>
            <div class="input-group mb-1">
              <div class="form-floating">
                <input id="loginKey" name="SecretKey" type="password" class="form-control" placeholder="Gizli Şifrenizi Girin"/>
                <label for="loginKey">Gizli Şifre</label>
              </div>
              <div class="input-group-text"><span class="bi bi-lock-fill"></span></div>
            </div>
            <!--begin::Row-->
            <div class="row">
              <div class="col-4">
                <div class="d-grid gap-2">
                  <button type="submit" class="btn btn-primary">Üye Ol</button>
                </div>
              </div>
            </div>
            <!--end::Row-->
          </form>
          <!-- /.social-auth-links -->
          <p class="mb-0">
            <a href="@Url.Action("Login","Auth")" class="text-center"> Hesabın varsa giriş yap </a>
          </p>
        </div>
        <!-- /.login-card-body -->
      </div>
    </div>
