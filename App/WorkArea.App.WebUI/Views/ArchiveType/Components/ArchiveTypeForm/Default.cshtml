@model ArchiveType

<form asp-action="@ViewBag.Action" enctype="multipart/form-data"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-success="OnFormSuccess" data-ajax-begin="OnFormBegin">
    <div class="card-body">
        <div class="row mb-3">
          <label for="input1" class="col-sm-2 col-form-label">Arşiv Tipi</label>
          <div class="col-sm-10">
            <input type="text" asp-for="Name" class="form-control" id="input1">
          </div>
        </div>
    </div>
    <div class="card-footer">
        @if (Model != null && Model.Id > 0)
        {
            <input asp-for="Id" type="hidden" />
            <button type="submit" class="btn btn-primary">Güncelle</button>
        }
        else
        {
            <button type="submit" class="btn btn-success">Ekle</button>    
        }
    </div>
</form>