@model WorkArea.Domain.Entities.ArchiveType
@{
    var title = Model.Name + " Düzenleniyor";
    ViewBag.Title = title;
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6"><h3 class="mb-0">@title</h3></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","ArchiveType")">Liste</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="app-content">
    <div class="card">
        <div class="card-header">
            <div class="card-title">@title</div>
        </div>
        @await Component.InvokeAsync("ArchiveTypeForm", new { action = "Edit", Model = Model })
    </div>
</div>

@section Scripts
{
    @await Html.PartialAsync("Components/ArchiveTypeForm/_ArchiveTypeFormScriptsPartial")
}